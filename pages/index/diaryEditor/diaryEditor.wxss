/* pages/index/editor/editor.wxss */
@import "./assets/iconfont.wxss";
@import "/common/index.wxss";

.diary-editor-component {
  --component-padding: 10px;
  --header-toolbar-height: 40px;
  --bottom-toolbar-height: 50px;
  --location-height: 30px;
}

.diary-editor-component {
  position: absolute;
  top: 0;
  left: 0;
  width: calc(100% - var(--component-padding) * 2);
  height: calc(100% - var(--component-padding) * 2);
  background-color: #ffffff;
  padding: var(--component-padding);
}

.header-toolbar {
  height: var(--header-toolbar-height);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.publish-diary-btn {
  margin: 0;
}

.diary-editor-container {
  height: calc(100% - var(--bottom-toolbar-height) - var(--header-toolbar-height) - var(--location-height));
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
  -webkit-overflow-scrolling: touch;
  /* 惯性滚动 */
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.bottom-toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: var(--toolbar-height);
  width: 100%;
  position: fixed;
  left: 0;
  right: 100%;
  bottom: 50px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border: 1px solid #ECECEC;
  border-left: none;
  border-right: none;
}

.location-container {
  position: fixed;
  bottom: 50px;
  height: var(--location-height);
  display: flex;
  align-items: center;
  padding-bottom: 5px;
  justify-content: space-between;
  width: calc(100% - var(--component-padding) * 2);
}

.location-display {
  display: flex;
}

.location-icon {
  width: calc(var(--location-height) - 5px);
  height: calc(var(--location-height) - 5px);
  margin-right: 14px;
}