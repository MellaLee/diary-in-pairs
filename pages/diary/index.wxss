/* pages/diary/index.wxss */
.diary-list {
    height: 100%;
    background-color: #ffffff;
    padding: 20rpx 25rpx;
}

.diary-list-item {
    display: flex;
    padding-bottom: 15px;
    margin-bottom: 30px;
    box-shadow: 0 1px 0 0 rgb(0 0 0 / 6%);
}

.avatar {
    margin-right: 20px;
    width: 30px;
    height: 30px;
}

.nick-name {
    font-weight: 800;
    height: 30px;
    display: flex;
    align-items: center;
    margin-bottom: 5px;
}

.diary-content-container {
    margin-bottom: 10px;
}

.other-info {
    font-size: 13px;
    color: #9e9e9e;
}

.location {
    margin-bottom: 15px;
}