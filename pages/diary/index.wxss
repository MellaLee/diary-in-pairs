/* pages/diary/index.wxss */
.diary-list {
    height: 100%;
    background-color: #ffffff;
}

.loading-container {
    position: fixed;
    top: 15px;
    right: 15px;
    display: inline-block;
    border: 4px solid hsl(222 100% 95%);
    border-left-color: hsl(243 80% 62%);
    border-radius: 50%;
    width: 15px;
    height: 15px;
    animation: donut-spin 1.2s linear infinite;
}

@keyframes donut-spin {
    to {
        transform: rotate(1turn);
    }
}

.scroll-view-diary {
    height: 100vh;
}

.scroll-diary-list-item {
    display: flex;
    padding-bottom: 15px;
    margin: 20px 20px 30px 20px;
    box-shadow: 0 1px 0 0 rgb(0 0 0 / 6%);
}

.avatar {
    margin-right: 20px;
    width: 30px;
    height: 30px;
}

.nick-name {
    font-weight: 800;
    height: 30px;
    display: flex;
    align-items: center;
    margin-bottom: 5px;
}

.create-time {
    margin-top: 10px;
}

.ql-container {
    height: auto;
    min-height: 0px;
}

.attachment-container {
    margin-top: 15px;
    display: flex;
}

.attachment-img {
    width: 100px;
    height: 100px;
    margin-right: 10px;
}

.other-info {
    font-size: 13px;
    color: #9e9e9e;
}

.location {
    margin-bottom: 15px;
}